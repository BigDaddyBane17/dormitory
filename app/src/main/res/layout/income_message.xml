<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/incomeMessageDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23:59"
        android:textColor="#808080"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/incomeMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/incoming_message"
        android:padding="8dp"
        android:text="Hello, this is an incoming message"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/incomeMessageCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15.05.24"
        android:textColor="#808080"
        android:textSize="12sp"/>

</LinearLayout>
