<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.tradeit.fragments.HomeScreen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.tradeit.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/adFragment"
        android:name="com.example.tradeit.fragments.AdFragment"
        android:label="fragment_ad"
        tools:layout="@layout/fragment_ad" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.tradeit.fragments.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_dialogFragment"
            app:destination="@id/dialogFragment" >
        </action>

    </fragment>
    <fragment
        android:id="@+id/dialogFragment"
        android:name="com.example.tradeit.fragments.DialogFragment"
        android:label="fragment_dialog"
        tools:layout="@layout/fragment_dialog" />
</navigation>